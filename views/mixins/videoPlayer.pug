mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`) 
        .videoPlayer__controls
            .videoPlayer__slider
                input.videoPlayer__slider#jsSlider(type="range", value="0")
            .videoPlayer__container
                .videoPlayer__column
                    span#jsPlayButton
                        i.fas.fa-play
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5") 
                    span
                        span#currentTime 00:00:00 
                        |/ 
                        span#totalTime 00:00:00               
                .videoPlayer__column
                    span#jsfullScreen
                        i.fas.fa-expand

